---
const navItems = [
  { href: '/', text: 'Home' },
  { href: '/tags', text: 'Tags' }
];

function toggleDarkMode() {
  if (document.documentElement.classList.contains('dark')) {
    document.documentElement.classList.remove('dark');
    localStorage.theme = 'light';
  } else {
    document.documentElement.classList.add('dark');
    localStorage.theme = 'dark';
  }
}
---

<header class="bg-white dark:bg-slate-800 shadow-sm sticky top-0 z-10 transition-colors">
  <div class="max-w-4xl mx-auto w-full px-4 sm:px-6">
    <nav class="flex items-center justify-between py-4">
      <a href="/" class="text-2xl font-bold text-slate-900 dark:text-white hover:text-sky-800 dark:hover:text-sky-400 transition-colors">
        DevBlog
      </a>
      
      <div class="flex items-center space-x-6">
        <ul class="flex items-center space-x-6">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href} 
                class="text-slate-700 dark:text-slate-200 hover:text-sky-800 dark:hover:text-sky-400 font-medium transition-colors"
              >
                {item.text}
              </a>
            </li>
          ))}
        </ul>
        
        <button
          id="theme-toggle"
          class="p-2 text-slate-700 dark:text-slate-200 hover:text-sky-800 dark:hover:text-sky-400 transition-colors"
          aria-label="Toggle dark mode"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
      </div>
    </nav>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  themeToggle?.addEventListener('click', () => {
    if (document.documentElement.classList.contains('dark')) {
      document.documentElement.classList.remove('dark');
      localStorage.theme = 'light';
    } else {
      document.documentElement.classList.add('dark');
      localStorage.theme = 'dark';
    }
  });
</script>