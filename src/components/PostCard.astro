---
interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  url: string;
}

const { title, description, date, tags, url } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="bg-white dark:bg-slate-800 rounded-lg shadow-md">
  <a href={url} class="block p-6">
    <span class="text-xs text-slate-500 dark:text-slate-400 mb-2 block">{formattedDate}</span>
    <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">{title}</h2>
    <p class="text-slate-600 dark:text-slate-300 mb-4 line-clamp-3">{description}</p>
    
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="inline-block bg-sky-100 dark:bg-sky-900 text-sky-800 dark:text-sky-100 text-xs px-3 py-1 rounded-full">
          #{tag}
        </span>
      ))}
    </div>
  </a>
</article>